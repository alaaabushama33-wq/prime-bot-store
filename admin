  <div class="container">
    <p>جميع الحقوق محفوظة © 2026 Prime Bot Store</p>
    <p style="margin-top:10px;">
      <a href="https://discord.gg/CcqHksHxZT" target="_blank">سيرفر الديسكورد</a> • سياسة الخصوصية
    </p>
  </div>
</footer>

<script>
  const STORAGE_KEY = 'primeBotsData';
  let bots = JSON.parse(localStorage.getItem(STORAGE_KEY)) || [
    { id: Date.now()+1, name: "Prime Protector", description: "حماية متقدمة من السبام • مضاد رايد", price: "مجاناً مدى الحياة", isFree: true, icon: "shield-alt", badge: "free", inviteLink: "https://discord.gg/CcqHksHxZT" },
    { id: Date.now()+2, name: "Prime Tickets", description: "نظام تذاكر احترافي • فئات متعددة", price: "15$ • مدى الحياة", isFree: false, icon: "ticket-alt", badge: "hot", inviteLink: "https://discord.gg/CcqHksHxZT" },
    { id: Date.now()+3, name: "Prime Economy", description: "نظام اقتصاد كامل • متجر • عملات", price: "25$ • مدى الحياة", isFree: false, icon: "coins", badge: "new", inviteLink: "https://discord.gg/CcqHksHxZT" }
  ];

  function saveBots() {
    localStorage.setItem(STORAGE_KEY, JSON.stringify(bots));
    renderPublicCards();
    renderAdminCards();
  }

  function renderPublicCards() {
    const container = document.getElementById('publicCards');
    container.innerHTML = '';
    bots.forEach(bot => {
      const card = document.createElement('div');
      card.className = 'card';
      card.innerHTML = `
        ${bot.badge ? `<div class="badge badge-${bot.badge}">${bot.badge==='free'?'مجاني':bot.badge==='hot'?'الأكثر طلباً':'جديد'}</div>` : ''}
        <div class="card-img"><i class="fas fa-${bot.icon || 'robot'}"></i></div>
        <div class="card-body">
          <h3>${bot.name}</h3>
          <p>${bot.description || ''}</p>
          <div class="price ${bot.isFree ? 'free' : 'paid'}">${bot.price || 'غير محدد'}</div>
          <a href="${bot.inviteLink || '#'}" target="_blank" class="btn ${bot.isFree ? 'btn-discord' : 'btn-green'}" style="width:100%; margin-top:12px; display:block; text-align:center;">
            ${bot.isFree ? 'دعوة البوت' : 'شراء الآن'}
          </a>
        </div>
      `;
      container.appendChild(card);
    });
  }

  function renderAdminCards() {
    const container = document.getElementById('adminCards');
    container.innerHTML = '';
    bots.forEach((bot, index) => {
      const card = document.createElement('div');
      card.className = 'card';
      card.innerHTML = `
        <div class="card-img"><i class="fas fa-${bot.icon || 'robot'}"></i></div>
        <div class="card-body">
          <h3>${bot.name}</h3>
          <p>${bot.price} ${bot.isFree ? '(مجاني)' : ''}</p>
          <div class="actions">
            <button class="btn btn-discord edit-btn" data-index="${index}">تعديل</button>
            <button class="btn btn-red delete-btn" data-index="${index}">حذف</button>
          </div>
        </div>
      `;
      container.appendChild(card);
    });

    // أحداث التعديل والحذف
    document.querySelectorAll('.edit-btn').forEach(btn => {
      btn.addEventListener('click', e => {
        const idx = e.target.dataset.index;
        const bot = bots[idx];
        document.getElementById('editId').value = bot.id;
        document.getElementById('name').value = bot.name;
        document.getElementById('description').value = bot.description || '';
        document.getElementById('price').value = bot.price || '';
        document.getElementById('isFree').checked = bot.isFree;
        document.getElementById('icon').value = bot.icon || 'robot';
        document.getElementById('badge').value = bot.badge || '';
        document.getElementById('inviteLink').value = bot.inviteLink || '';
        window.scrollTo(0, 0);
      });
    });

    document.querySelectorAll('.delete-btn').forEach(btn => {
      btn.addEventListener('click', e => {
        if (confirm('هل أنت متأكد من حذف هذا البوت؟')) {
          const idx = e.target.dataset.index;
          bots.splice(idx, 1);
          saveBots();
        }
      });
    });
  }

  // حفظ بوت جديد أو تعديل موجود
  document.getElementById('saveBot').addEventListener('click', () => {
    const name = document.getElementById('name').value.trim();
    if (!name) return alert('اسم البوت مطلوب!');

    const botData = {
      id: document.getElementById('editId').value ? Number(document.getElementById('editId').value) : Date.now(),
      name,
      description: document.getElementById('description').value.trim(),
      price: document.getElementById('price').value.trim(),
      isFree: document.getElementById('isFree').checked,
      icon: document.getElementById('icon').value.trim() || 'robot',
      badge: document.getElementById('badge').value,
      inviteLink: document.getElementById('inviteLink').value.trim()
    };

    const editId = document.getElementById('editId').value;
    if (editId) {
      const idx = bots.findIndex(b => b.id === Number(editId));
      if (idx !== -1) bots[idx] = botData;
    } else {
      bots.push(botData);
    }

    saveBots();
    document.getElementById('clearForm').click();
    alert('تم الحفظ بنجاح!');
  });

  document.getElementById('clearForm').addEventListener('click', () => {
    document.getElementById('editId').value = '';
    document.getElementById('name').value = '';
    document.getElementById('description').value = '';
    document.getElementById('price').value = '';
    document.getElementById('isFree').checked = false;
    document.getElementById('icon').value = 'robot';
    document.getElementById('badge').value = '';
    document.getElementById('inviteLink').value = 'https://discord.gg/CcqHksHxZT';
  });

  document.getElementById('toggleAdmin').addEventListener('click', () => {
    const panel = document.getElementById('adminPanel');
    panel.style.display = panel.style.display === 'none' ? 'block' : 'none';
  });

  // تحميل أولي
  renderPublicCards();
  renderAdminCards();
</script>

</body>
</html>
